<article class="article article-type-<%= post.layout %>" itemscope itemtype="http://schema.org/BlogPosting">
  <div class="article-header">
    <%- partial('post/title', {class_name: 'article-title'}) %>
  </div>
  <% if (post.excerpt){ %>
  <div class="article-entry text-muted" itemprop="description">
    <%- post.excerpt %>
  </div>
  <% } %>
  <p class="article-meta">
    <%- partial('post/date', {class_name: 'article-date', date_format: 'MMM D'}) %>
    <%- partial('post/category') %>
    <%- partial('post/tag') %>
    <span class="post-comment"><i class="icon icon-comment"></i> <a href="<%- url_for(post.path) %>#comments" class="article-comment-link"><%= __('article.comments') %></a></span>
    <%- partial('post/wordcount') %>
  </p>
</article>
